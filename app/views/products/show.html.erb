<div class="container">
  <div class="row">
  	<h4><%=link_to @product.title, @product %></h4>
    <div class="col-md-6 ">
      <%= image_tag @product.large_image_url %>
    </div>
    
    <div class="col-md-3">
    
      <ul class="list-group">
        <li class="list-group-item"> Item ID: <%= @product.id %> </li> 	
        <li class="list-group-item"> Item Description: <%= @product.description%></li>
        <li class="list-group-item"> Item Price: <%= number_to_currency(@product.price/100) unless @product.price == nil%> </li>
        <li class="list-group-item"> In Stock: <%= @product.stock%> </li>
        <li class= "list-group-item">

       
        <%= form_for @line_item, :html => {:class => "form-inline"} do |f|%>
          <div class="form-group">
            <%= f.text_field :quantity, min: "1" ,max: @product.stock ,step: "1" ,value: "1", class: "form-control", type: "number" %>  
          </div>
          <%= f.hidden_field :product_id, value: @product.id %>

          <%= f.submit "Add to Cart", class: "btn btn-info" %>

        <% end %>

        </li>
      </ul>
    </div>

  </div>

 
</div>

