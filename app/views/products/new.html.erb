
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.post_product', default: 'Post Product') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(@product) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
      
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control', line: '10' %>
        </div>

        <div class="form-group">
          <%= f.label :price %>
          <div class="input-group">
            <div class="input-group-addon">$</div>
            <%= f.text_field :price, class: 'form-control' %>
            </div>
          </div>
      
        <div class="form-group">
          <%= f.label :category %>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {:class=>'form-control'})%>
        </div>  
        <div class="form-group">
          <%= f.label :original_image_url, "Products' images" %>
          <%= f.file_field :original_image_url, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :stock %>
          <%= f.text_field :stock, class: 'form-control' %>
        </div>
      <%= f.submit "Post", class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>
